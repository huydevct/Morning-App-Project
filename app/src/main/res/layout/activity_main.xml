<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/welcome_custom"
        tools:context=".views.MainActivity">


        <ImageButton
            android:id="@+id/imageButtonWeather"
            android:layout_width="106dp"
            android:layout_height="104dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="132dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/weather" />

        <ImageButton
            android:id="@+id/imageButtonNews"
            android:layout_width="106dp"
            android:layout_height="104dp"
            android:layout_marginStart="46dp"
            android:layout_marginTop="48dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButtonWeather"
            app:srcCompat="@drawable/news" />

        <ImageButton
            android:id="@+id/imageButtonCovid"
            android:layout_width="106dp"
            android:layout_height="104dp"
            android:layout_marginTop="132dp"
            android:layout_marginEnd="44dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/covid_icon" />

        <ImageButton
            android:id="@+id/imageButtonTodo"
            android:layout_width="106dp"
            android:layout_height="104dp"
            android:layout_marginEnd="46dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/imageButtonNews"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageButtonNews"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/todo" />


</androidx.constraintlayout.widget.ConstraintLayout>

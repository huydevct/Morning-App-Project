<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_custom"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:background="@drawable/linear_custom"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:id="@+id/textView"
                    android:layout_width="243dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="4dp"
                    android:text="App Thông Tin"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/buttonTienIch"
                    android:layout_width="60dp"
                    android:layout_marginLeft="20dp"
                    android:background="@null"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/popup" />
        </LinearLayout>


        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:srcCompat="@drawable/back_icon" />

        <ImageView
            android:id="@+id/imageViewNext"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="3dp"
            android:layout_marginTop="1dp"
            android:background="@null"
            app:layout_constraintStart_toEndOf="@+id/imageViewBack"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:srcCompat="@drawable/next_icon" />

        <ImageView
            android:id="@+id/imageViewReload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@null"
            app:layout_constraintStart_toEndOf="@+id/imageViewNext"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:srcCompat="@drawable/reload_icon" />

        <EditText
            android:id="@+id/editTextTimKiem"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="3dp"
            android:ems="10"
            android:hint="Tìm Kiếm..."
            android:inputType="textPersonName"
            app:layout_constraintEnd_toStartOf="@+id/buttonSearch"
            app:layout_constraintStart_toEndOf="@+id/imageViewReload"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <ImageButton
            android:id="@+id/buttonSearch"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/search_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <WebView
            android:id="@+id/webViewSearch"
            android:layout_width="359dp"
            android:layout_height="434dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>

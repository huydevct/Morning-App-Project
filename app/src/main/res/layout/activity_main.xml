<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A2FFF6"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:background="@drawable/linear_main_custom"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/textView"
                    android:textColor="#FFFFFF"
                    android:layout_width="243dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="4dp"
                    android:text="News Weather "
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/buttonTienIch"
                    android:layout_width="60dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="50dp"
                    android:background="#8ACAFB"
                    android:layout_height="60dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/popup" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="500dp"
            android:orientation="vertical"
            android:weightSum="10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                        <ImageView
                            android:id="@+id/imageViewBack"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            app:srcCompat="@drawable/back_icon"
                            tools:layout_editor_absoluteY="70dp" />

                        <ImageView
                            android:id="@+id/imageViewNext"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="8dp"
                            android:background="@null"
                            app:srcCompat="@drawable/next_icon"
                            tools:layout_editor_absoluteX="31dp"
                            tools:layout_editor_absoluteY="68dp" />

                        <ImageView
                            android:id="@+id/imageViewReload"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="8dp"
                            android:background="@null"
                            app:srcCompat="@drawable/reload_icon"
                            tools:layout_editor_absoluteX="65dp"
                            tools:layout_editor_absoluteY="69dp" />

                        <EditText
                            android:id="@+id/editTextTimKiem"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:ems="10"
                            android:hint="Tìm Kiếm..."
                            android:inputType="textPersonName"
                            android:textColor="#2C0505"
                            tools:layout_editor_absoluteX="98dp"
                            tools:layout_editor_absoluteY="68dp" />

                        <ImageButton
                            android:id="@+id/buttonSearch"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="2dp"
                            android:background="@null"
                            android:scaleType="fitXY"
                            android:src="@drawable/search_icon"
                            tools:layout_editor_absoluteX="305dp"
                            tools:layout_editor_absoluteY="65dp" />
                </LinearLayout>

                <WebView
                    android:id="@+id/webViewSearch"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="9"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

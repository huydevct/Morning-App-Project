<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_custom"
    tools:context=".TinTucTongHop">

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="81dp"
        android:background="@drawable/linear_custom"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Tin Tức Tổng Hợp"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageViewBackMain"
            android:layout_gravity="center"
            android:layout_width="71dp"
            android:layout_height="36dp"
            android:layout_marginLeft="30dp"
            app:srcCompat="@drawable/next_icon" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="288dp"
        android:background="@drawable/rela_custom"
        android:layout_height="473dp"
        android:orientation="vertical"
        app:layout_editor_absoluteX="1dp"
        app:layout_editor_absoluteY="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/textViewTheGioi"
                android:text="Thế Giới"
                android:background="@drawable/textview_custom"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="18dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewThoiSu"
                android:text="Thời Sự"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/textview_custom"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/textViewTinMoiNhat"
                android:text="Mới Nhất"
                android:background="@drawable/textview_custom"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="18dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewTinNoiBat"
                android:text="Nổi Bật"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/textview_custom"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/textViewTheThao"
                android:text="Thể Thao"
                android:background="@drawable/textview_custom"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="18dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewGiaiTri"
                android:text="Giải Trí"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/textview_custom"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <TextView
                android:id="@+id/textViewKhoaHoc"
                android:text="Khoa Học"
                android:background="@drawable/textview_custom"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="18dp"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
            <Space
                android:layout_width="40dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewKinhDoanh"
                android:text="Kinh Doanh"
                android:textSize="20sp"
                android:gravity="center"
                android:background="@drawable/textview_custom"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
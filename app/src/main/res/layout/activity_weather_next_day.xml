<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_custom"
    tools:context=".WeatherNextDay">

    <LinearLayout
        android:background="@drawable/linear_custom"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="42dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:background="@null"
            android:src="@drawable/back_icon" />

        <TextView
            android:id="@+id/textViewNameCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="Thành Phố"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>
    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>
    <ListView
        android:background="@drawable/textview_custom"
        android:padding="5dp"
        android:id="@+id/listViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
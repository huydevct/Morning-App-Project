        <activity
            android:name=".views.Call"
            android:exported="true" />
        <activity
            android:name=".views.SMS"
            android:exported="true" />
        <activity
            android:name=".views.ToDoActivity"
            android:exported="true" />
        <activity
            android:name=".views.Covid19Activity"
            android:exported="true" />
        <activity
            android:name=".views.WeatherNextDay"
            android:exported="true" />
        <activity
            android:name=".views.WeatherApp"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>